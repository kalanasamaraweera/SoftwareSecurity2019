<% layout('layout') -%>

<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="#">
        Sign In as, <%= email %>
    </a>
</nav>
<div class="container">
    <h3>Your Google+ connections:</h3>

    <% for(var i=0; i< connections.length; i++) { %>
    <div class="card" style="width: 18rem;">
        <img src="<%= connections[i].photo_url %>" alt="John" style="width:100%;height:50%">
        <h6><%= connections[i].name %></h6>
    </div>
    <br>
    <% } %>
    
    <p><%= message %></p>

</div>